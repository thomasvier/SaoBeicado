<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - São Beiçado</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/all.css")
    @Styles.Render("~/Content/bootstrap-datepicker3.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/Chart.js")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>                
                <a href="#" onclick="location.href='@Url.Action("Index", "Home")'">
                    <img src="~/Imagens/logo.jpg" class="logo" />
                </a>
            </div>            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Administração <span class="caret"></span>
                        </a>
                        <ul id="menu-admin" class="dropdown-menu">
                            <li>@Html.ActionLink("Integrantes", "Index", "Integrantes")</li>
                            <li>@Html.ActionLink("Calendários", "Index", "Calendarios")</li>
                            <li>@Html.ActionLink("Mensalidades", "Index", "Mensalidades")</li>
                        </ul>
                    </li>                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Futebol <span class="caret"></span>
                        </a>
                        <ul id="menu-admin" class="dropdown-menu">
                            <li>@Html.ActionLink("Adversários", "Index", "Adversarios")</li>
                            <li>@Html.ActionLink("Locais de jogo", "Index", "LocaisJogo")</li>
                            <li>@Html.ActionLink("Jogos", "Index", "Jogos")</li>                            
                        </ul>
                    </li>                    
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            @Context.User.Identity.Name
                            <span class="caret"></span>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Sair", "LogOff", "Autenticacao")
                                </li>
                            </ul>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{Html.RenderPartial("_Mensagem");}
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - São Beiçado</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.mask.js")
    @Scripts.Render("~/Scripts/jquery.maskMoney.min.js")
    @Scripts.Render("~/Scripts/bootstrap-datepicker.min.js")    
    @Scripts.Render("~/Scripts/Views/Geral.js")
    @Scripts.Render("~/Scripts/bootbox.js")
    @RenderSection("scripts", required: false)
</body>
</html>
