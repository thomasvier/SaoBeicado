                        @Html.LabelFor(model => model.Abril, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Abril, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Maio)
                        @Html.LabelFor(model => model.Maio, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Maio, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-2">
