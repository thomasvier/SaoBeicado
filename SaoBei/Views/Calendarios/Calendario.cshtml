                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Julho)
                        @Html.LabelFor(model => model.Julho, htmlAttributes: new { @class = "control-label" })
                        @Html.ValidationMessageFor(model => model.Julho, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Agosto)
                        @Html.LabelFor(model => model.Agosto, htmlAttributes: new { @class = "control-label" })
