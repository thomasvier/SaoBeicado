@model SaoBei.Models.MensalidadeIntegrante
@using System.Globalization;

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Mensalidades - @ViewBag.Nome</h4>
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.CalendarioID)
            @Html.HiddenFor(model => model.IntegranteID)
            @Html.HiddenFor(model => model.Mes)
        </div>        
        <div class="modal-body">               
            @{
                var mes = new DateTime(DateTime.Now.Year, Model.Mes, 1).ToString("MMMM", CultureInfo.CurrentCulture);
            }
            <div class="row">
                <div class="col-md-8">
                    <h3 style="text-transform: capitalize">@mes</h3>
                    
                </div>                
                <div class="col-md-4">                    
                    @Html.Label("Data do pagamento", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DataPagamento, new { htmlAttributes = new { @class = "form-control datepicker" } })
                </div>
            </div>                                  
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-default">Salvar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        </div>
    </div>
</div>
<script>
      $(document).ready(function () {
          $('#DataPagamento').datepicker({
              format: 'dd/mm/yyyy'
          });
      });
</script>
}